<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:weightSum="1"
    android:paddingTop="12dp"
    android:background="@android:color/white">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/prayerLocation_present"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="12dp"
        android:background="@drawable/light_grey_bottom_border" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="building"
                android:id="@+id/prayerLocation_roomNumber"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                android:textSize="16sp"
                android:textColor="#868686"
                android:textAllCaps="true"
                android:id="@+id/prayerLocation_status"
                android:layout_marginLeft="5dp"
                android:paddingRight="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:id="@+id/prayerLocation_description"
            android:textSize="15sp"
            android:textColor="#868686"
            android:paddingRight="20dp" />
    </LinearLayout>
</LinearLayout>
