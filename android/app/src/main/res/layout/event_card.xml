<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.parse.ParseImageView
            android:id="@+id/event_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/event_linLayoutTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="10dip"
                android:layout_marginTop="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Title"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <TextView
            android:id="@+id/event_startTime"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:text="Time"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:paddingLeft="10dip"
            android:layout_below="@+id/event_thumbnail"/>

        <TextView
            android:id="@+id/event_category"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Category"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:paddingLeft="10dip"
            android:layout_toRightOf="@+id/event_startTime"
            android:layout_below="@+id/event_thumbnail"/>

        <ImageView
            android:id="@+id/event_likeImageView"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/event_category"
            android:layout_below="@+id/event_thumbnail"
            android:src="@drawable/ic_like"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>