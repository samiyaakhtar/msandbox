<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:text="Category"
            android:textColor="#f6f6f6"
            android:textSize="14dp"
            android:layout_gravity="right"
            android:layout_marginTop="75dp"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/event_thumbnail_flayout"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp">

            <com.parse.ParseImageView
                android:id="@+id/event_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/picture_gradient" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/event_linLayoutTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="60dp"
                android:paddingLeft="10dp"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textIsSelectable="true"
                android:textSize="20sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_thumbnail_flayout"
            android:padding="10dp">

        <TextView
            android:id="@+id/event_startTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="Time"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:maxWidth="180dp" />


        <ImageView
            android:id="@+id/event_likeImageView"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_like"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>