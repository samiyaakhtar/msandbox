<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.uwmsa.msandbox.Activities.EventDetailsActivity" tools:ignore="MergeRootFrame" >

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            >

            <com.parse.ParseImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/eventDetails_thumbnail"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/eventDetails_startTime"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/eventDetails_endTime"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/eventDetails_location"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventDetails_description"
                android:textColor="#000000"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>